<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Organization Dashboard</title>
  <link rel="stylesheet" href="/styles/user.css">
  <link rel="stylesheet" href="/styles/OrgSidebar.css">
</head>
<body>
  <div class="dashboard-container">

    <!-- SideBAr -->
    <%- include("OrgSidebar.ejs") %>


    <!-- Main Content -->
    <main class="main-content">
      <header class="topbar">
        <h2 class="h2">Dashboard</h2>
        <button class="logout-btn">log out</button>
      </header>

      <section class="profile-section">
        <h3>Edit Profile</h3>

        <!-- Tabs
        <div class="tabs">
          <button class="tab active">Personal Information</button>
          <button class="tab">Experience</button>
          <button class="tab">Education</button>
          <button class="tab">Additional Information</button>
        </div> -->
        <h1 class="h1">Company Logo</h1>

        <!-- Profile Form -->
        <div class="profile-box">
          <div class="photo-section">
            <div class="photo-placeholder"></div>
            <button class="select-btn">Select</button>
            
          </div>

          <div class="form-section">
            <label>Company Name</label>
            <div class="input"></div>

            <label>Email</label>
            <div class="input"></div>

            <div class="input-row">
              <div>
                <label>Location</label>
                <div class="input1"></div>
              </div>
              <div>
                <label>Phone</label>
                <div class="input1"></div>
              </div>
              <div>
                <label>Fax no:</label>
                <div class="input1"></div>
              </div>
            </div>

            <label>Company Description</label>
            <div class="textarea"></div>
          </div>
        </div>
      </section>
    </main>

  </div>
</body>
</html>
