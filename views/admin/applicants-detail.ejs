<%-include("../head.ejs")%>

<link rel="stylesheet" href="/styles/applicants.css" />

<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar-box"><%-include("admin-sidebar.ejs")%></div>

    <!-- MAIN CONTENT -->
    <div class="box2">
      <%-include("../topbar.ejs")%>
      <div class="main-wrapper">
        <div class="main-content">
          <div class="title">
            <p>Applicants Details</p>
          </div>

          <div class="details">
            <div class="detail">
              <p><span>User: </span> <%=user.username%></p>
            </div>

            <div class="detail">
              <p><Span>Education</Span></p>
              <div class="education-table">
                <table>
                  <thead>
                    <tr>
                      <th>Degree</th>
                      <th>Field of Study</th>
                      <th>University</th>
                      <th>College</th>
                      <th>Joined Year</th>
                      <th>End Year</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%if(!user.education || user.education.length == 0){%>
                    <tr>
                      <td colspan="6">No education details available</td>
                    </tr>
                    <%} else{%> <%user.education.map((edu)=>{%>
                    <tr>
                      <td><%=edu.degree%></td>
                      <td><%=edu.fieldOfStudy%></td>
                      <td><%=edu.university%></td>
                      <td><%=edu.college%></td>
                      <td><%=edu.joined%></td>
                      <td><%=edu.passed%></td>
                    </tr>
                    <%})%> <%}%>
                  </tbody>
                </table>
              </div>
            </div>

            <div class="detail">
              <p><span>Experience: </span></p>
              <div class="education-table">
                <table>
                  <thead>
                    <tr>
                      <th>Organization</th>
                      <th>Position</th>
                      <th>Industry</th>
                      <th>Job Type</th>
                      <th>Roles</th>
                      <th>Start Date</th>
                      <th>End Date</th>
                    </tr>
                  </thead>

                  <tbody>
                    <%if(!user.experience || user.experience.length==0){%>
                    <tr>
                      <td colspan="7">No experience details available</td>
                    </tr>
                    <%} else{%> <%user.experience.map((edu)=>{%>
                    <tr>
                      <td><%=edu.organization%></td>
                      <td><%=edu.position%></td>
                      <td><%=edu.industry%></td>
                      <td><%=edu.jobType%></td>
                      <td><%=edu.roles%></td>
                      <td><%=edu.startDate%></td>
                      <td><%=edu.endDate%></td>
                    </tr>
                    <%})%> <%}%>
                  </tbody>
                </table>
              </div>
            </div>

            <div class="detail-row">
              <div class="dr">
                <p><span>Social: </span> <%=user.social%></p>
              </div>

              <div class="dr">
                <p><span>Linkedin: </span> <%=user.linkedin%></p>
              </div>

              <div class="dr">
                <p><span>Github: </span><%=user.github%></p>
              </div>
            </div>

            <div class="detail">
              <p><span>Resume: </span></p>
              <embed
                src="<%=resumeURL%>"
                type="application/pdf"
                class="resume"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%-include("../components/foot")%>
