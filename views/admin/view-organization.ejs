<%-include("../head.ejs")%>

<link rel="stylesheet" href="/styles/admin-organization.css" />

<body>
  <div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar-box"><%-include("../sidebar.ejs")%></div>

    <!-- MAIN CONTENT -->
    <div class="box2">
      <%-include("../topbar.ejs")%>
      <div class="main-wrapper">
        <div class="main-content">
          <div class="details">
            <div class="detail">
              <p><Span>Education</Span></p>
              <div class="education-table">
                <table>
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Email</th>
                      <th>Phone</th>
                      <th>Location</th>
                      <th>Website</th>
                      <th>Facebook</th>
                      <th>LinkedIn</th>
                      <th>Status</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <%if(org.length == 0){%>
                    <tr>
                      <td colspan="6">No education details available</td>
                    </tr>
                    <%} else{%> <%org.map((org)=>{%>
                    <tr>
                      <td><%=org.name%></td>
                      <td><%=org.email%></td>
                      <td><%=org.phone%></td>
                      <td><%=org.location%></td>
                      <td><%=org.website%></td>
                      <td><%=org.facebook%></td>
                      <td><%=org.linkedin%></td>
                      <td><%=org.status%></td>
                      <td id="table-btns">
                        <button
                          class="accept"
                          data-organization-id="<%=org.id%>"
                        >
                          Accept</button
                        ><button
                          class="decline"
                          data-organization-id="<%=org.id%>"
                        >
                          Decline
                        </button>
                      </td>
                    </tr>
                    <%})%> <%}%>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
<%-include("../components/foot")%>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    const acceptBtns = document.querySelectorAll(".accept");
    const declineBtns = document.querySelectorAll(".decline");

    acceptBtns.forEach((accept) => {
      accept.addEventListener("click", async function (e) {
        e.preventDefault();
        console.log("Accept Button Clicked");
        const organizationId = this.dataset.organizationId;
        fetch("/admin/organization/accept", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ organizationId }),
        })
          .then((res) => {
            if (!res.ok) {
              throw new Error("Network response was not ok");
            }
            return res.json();
          })
          .then((data) => {
            if (data.title == "success") {
              Toast.fire({
                icon: "success",
                title: data.message,
              });
            } else {
              Toast.fire({
                icon: "error",
                title: data.message,
              });
            }
          })
          .catch((error) => {
            Toast.fire({
              icon: "error",
              title: "An error occured while updating status",
            });
          });
      });
    });

    declineBtns.forEach((decline) => {
      decline.addEventListener("click", async function (e) {
        e.preventDefault();
        console.log("declined Button Clicked");
        const organizationId = this.dataset.organizationId;
        fetch("/admin/organization/cancel", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ organizationId: organizationId }),
        })
          .then((res) => {
            if (!res.ok) {
              throw new Error("Network response was not ok");
            }
            return res.json();
          })
          .then((data) => {
            if (data.title == "success") {
              Toast.fire({
                icon: "success",
                title: data.message,
              });
            } else {
              Toast.fire({
                icon: "error",
                title: data.message,
              });
            }
          })
          .catch((error) => {
            Toast.fire({
              icon: "error",
              title: "An error occured while updating status",
            });
          });
      });
    });
  });
</script>
