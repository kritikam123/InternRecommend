<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Story+Script&display=swap"
    rel="stylesheet"
  />
  <link rel="stylesheet" href="/styles/loginstyle.css" />
  <title>Document</title>
</head>
<body>
  <section class="background">
    <!-- <img src="img.svg" alt="" class="bgimg"> -->
    <div class="box-parent">
      <div class="box">
        <div class="logo">
          <img src="/images/logo.svg" alt="" />
        </div>
        <div class="login">
          <p>Login</p>
        </div>
        <div class="login-contents">
          <div class="username">
            <p>Email</p>
            <input type="text" id="email" name="email" />
          </div>

          <div class="password">
            <p>Password</p>
            <input type="password" id="password" name="password" />
          </div>

          <div class="checkbox">
            <div class="checkbox-child">
              <input type="checkbox" id="checkbox" name="checkbox" />
              <p>Remember me</p>
            </div>
          </div>

          <div class="btn">
            <button class="lbtn" id="login-btn">Login</button>
          </div>

          <div class="signup">
            <p>or signup</p>
          </div>

          <div class="forgot">
            <p>forgot password</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
<%-include("../components/foot")%>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    document
      .getElementById("login-btn")
      .addEventListener("click", function (e) {
        e.preventDefault();
        const email = document.getElementById("email").value;
        const password = document.getElementById("password").value;
        const remember = document.getElementById("checkbox").checked;

        console.log(email, password, remember);
        if (!email || !password) {
          Toast.fire({
            icon: "error",
            title: "Please fill all the fields",
          });
        }
        
        return fetch("/employers/employersLogin", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email, password, remember }),
        })
          .then((response) => response.json())
          .then((data) => {
            if (data.title == "Invalid Credentials") {
              Toast.fire({
                icon: "error",
                title: data.message,
              });
            } else if (data.title == "Wrong password") {
              Toast.fire({
                icon: "error",
                title: data.message,
              });
            } else if (data.title == "login successful") {
              console.log("successss");
              Toast.fire({
                icon: "success",
                title: data.message,
              });
              setTimeout(() => {
                window.location.href = "/employers/OrgProfile";
              }, 1500);
            } else {
              Toast.
                fire({
                  icon: "error",
                  title: "something went wrong",
                });
            }
          })
          .catch((error) => {
            console.log("registration unsuccessful", error);
            Toast.fire({
              icon: "error",
              title: "Something went wrong while logging in",
            });
          });
      });
  });
</script>